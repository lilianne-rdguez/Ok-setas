---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

// Datos estáticos del equipo para facilitar su modificación.
// Sustituye las rutas en 'image' cuando tengas las fotos reales en la carpeta public.
const team = {
  creator: {
    name: "Nombre de la Creadora",
    role: "Fundadora & Visionaria",
    description:
      "La mente maestra detrás de GrowTrades. Con una gran pasión por la micología y la sanación natural, su objetivo es democratizar el acceso a productos de la más alta calidad y acompañar a nuestra comunidad en su camino hacia el bienestar integral.",
    image: "/placeholder-creadora.jpg", // Cambiar a /imagen-real.jpg
  },
  developers: [
    {
      name: "Desarrollador 1",
      role: "Lead Tech & Architect",
      image: "/placeholder-dev1.jpg", // Cambiar a /imagen-real.jpg
    },
    {
      name: "Desarrollador 2",
      role: "Frontend Alchemist",
      image: "/placeholder-dev2.jpg", // Cambiar a /imagen-real.jpg
    },
    {
      name: "Desarrollador 3",
      role: "UI/UX Visionary",
      image: "/placeholder-dev3.jpg", // Cambiar a /imagen-real.jpg
    },
  ],
  values: [
    {
      icon: "psychiatry",
      title: "Calidad Suprema",
      description:
        "Seleccionamos minuciosamente cada producto para garantizar la máxima pureza.",
    },
    {
      icon: "energy_savings_leaf",
      title: "Conexión Natural",
      description:
        "Promovemos un estilo de vida en armonía con la naturaleza y sus ciclos.",
    },
    {
      icon: "verified",
      title: "Transparencia",
      description:
        "Nuestros procesos son claros, abiertos y guiados por la ética científica.",
    },
  ],
};
---

<Layout title="Sobre Nosotros | GrowTrades">
  <Header />

  <main class="min-h-screen bg-bg-dark text-white overflow-hidden relative">
    <!-- Decoración de fondo dinámica -->
    <div
      class="absolute top-0 left-0 w-full h-[500px] bg-gradient-to-b from-gold/10 to-transparent pointer-events-none z-0"
    >
    </div>
    <div
      class="absolute top-[-20%] right-[-10%] w-[500px] h-[500px] bg-gold/5 rounded-full blur-[120px] pointer-events-none z-0"
    >
    </div>

    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-24 relative z-10"
    >
      <!-- Título Hero (Nuevo Diseño Editorial Asimétrico) -->
      <div class="mb-32 animate-fade-in-up border-b border-white/5 pb-20">
        <div class="flex flex-col lg:flex-row gap-12 lg:gap-24 items-end">
          <div class="flex-1">
            <span
              class="text-gold tracking-[0.3em] uppercase text-xs font-semibold mb-6 flex items-center gap-4"
            >
              <span class="w-12 h-px bg-gold/50"></span> Nuestra Historia
            </span>
            <h1
              class="font-display text-5xl md:text-7xl lg:text-8xl leading-none text-white tracking-[-0.04em] uppercase"
            >
              Sobre <br />
              <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-gold to-yellow-600"
                >Nosotros</span
              >
            </h1>
          </div>
          <div class="flex-1 lg:pb-4 border-l border-white/10 pl-8 lg:pl-12">
            <p
              class="text-gray-300 text-xl font-light leading-relaxed text-pretty"
            >
              Más que una tienda, somos una comunidad apasionada por la
              transformación personal. Conoce a las mentes creativas y técnicas
              que hacen posible la experiencia <strong
                class="text-white font-medium">GrowTrades</strong
              >.
            </p>
          </div>
        </div>
      </div>

      <!-- Sección de la Creadora (Editorial Minimalista) -->
      <section class="mb-32">
        <div
          class="flex flex-col md:flex-row items-center md:items-start gap-8 md:gap-16"
        >
          <div class="shrink-0 flex justify-center w-full md:w-auto">
            <div
              class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-2 border-white/10 grayscale hover:grayscale-0 transition-all duration-700"
            >
              <img
                src={team.creator.image}
                alt={team.creator.name}
                class="w-full h-full object-cover"
                onerror="this.src='https://ui-avatars.com/api/?name=F&background=1A1A1A&color=FFF&size=256'"
              />
            </div>
          </div>

          <div class="flex-1 text-center md:text-left">
            <span
              class="text-gold tracking-widest uppercase text-xs font-semibold mb-2 block"
              >{team.creator.role}</span
            >
            <h2
              class="font-display text-2xl md:text-3xl font-bold text-white mb-6 tracking-[-0.02em]"
            >
              {team.creator.name}
            </h2>

            <p
              class="text-gray-400 leading-relaxed font-light text-base md:text-lg text-pretty max-w-2xl"
            >
              {team.creator.description}
            </p>
          </div>
        </div>
      </section>

      <!-- Valores (Nueva sección de relleno y diseño) -->
      <section class="mb-32">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {
            team.values.map((val) => (
              <div class="bg-gradient-to-b from-white/5 to-transparent border border-white/5 rounded-2xl p-8 hover:border-gold/30 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-2 text-center group">
                <div class="w-16 h-16 mx-auto bg-gold/10 text-gold rounded-full flex items-center justify-center mb-6 group-hover:bg-gold group-hover:text-bg-dark transition-colors duration-500 shadow-[0_0_20px_rgba(255,215,0,0.1)] group-hover:shadow-[0_0_30px_rgba(255,215,0,0.5)]">
                  <span class="material-symbols-outlined text-3xl">
                    {val.icon}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-white mb-3 tracking-wide">
                  {val.title}
                </h3>
                <p class="text-gray-400 font-light leading-relaxed">
                  {val.description}
                </p>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Equipo de Desarrollo (Tarjetas Premium) -->
      <section>
        <div class="flex items-center justify-center gap-6 mb-16">
          <div class="h-px w-16 bg-gradient-to-r from-transparent to-gold/50">
          </div>
          <h2
            class="text-3xl md:text-4xl font-bold text-white text-center uppercase tracking-widest"
          >
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-gray-100 to-gray-500"
              >Mentes</span
            > Científicas
          </h2>
          <div class="h-px w-16 bg-gradient-to-l from-transparent to-gold/50">
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
          {
            team.developers.map((dev, index) => (
              <div class="bg-[#1A1A1A] rounded-[1.5rem] p-8 border border-white/5 flex flex-col items-center">
                <div class="w-32 h-32 mx-auto rounded-full overflow-hidden mb-6 border border-white/10 grayscale hover:grayscale-0 transition-all duration-500">
                  <img
                    src={dev.image}
                    alt={dev.name}
                    class="w-full h-full object-cover"
                    onerror={`this.src='https://ui-avatars.com/api/?name=${dev.name.replace(
                      " ",
                      "+"
                    )}&background=1A1A1A&color=FFF&size=256&font-size=0.33'`}
                  />
                </div>
                <div class="text-center w-full">
                  <h3 class="text-xl font-bold text-white mb-2 tracking-wide">
                    {dev.name}
                  </h3>
                  <span class="text-gold text-xs tracking-widest uppercase font-semibold">
                    {dev.role}
                  </span>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </div>
  </main>

  <style>
    /* Animación utilitaria para fadeInUp */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }
    .perspective-1000 {
      perspective: 1000px;
    }
  </style>
</Layout>
